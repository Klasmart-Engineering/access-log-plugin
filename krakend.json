{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "logstash"
      },
      "github_com/devopsfaith/krakend-metrics": {
        "collection_time": "60s",
        "proxy_disabled": false,
        "router_disabled": false,
        "backend_disabled": false,
        "endpoint_disabled": false,
        "listen_address": ":8090"
      },
      "plugin/http-server": {
        "name": [
          "access-log"
        ],
        "access-log": {
          "product_name": "Test Product",
          "buffer_size": 5,
          "firehose_batch_size": 2,
          "firehose_send_early_timeout_ms": 45000,
          "ignore_paths": [
            "/__health",
            "/__stats",
            "/ignored/*"
          ]
        }
      },
      "router": {
        "logger_skip_paths": [
          "/__health",
          "/__stats"
        ]
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "plugin-test-microgateway",
  "port": 8080,
  "endpoints": [
      {
        "endpoint": "/example/{id}",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
            {
                "method": "GET",
                "host": ["https://jsonplaceholder.typicode.com"],
                "url_pattern": "/users/{id}"
            }
        ]
      },
      {
        "endpoint": "/ignored/{id}",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "method": "GET",
            "host": ["https://jsonplaceholder.typicode.com"],
            "url_pattern": "/users/{id}"
          }
        ]
      }
  ]
}
